{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hand Action Event",
  "description": "Event triggered when a hand action is detected (e.g., picking up a tool).",
  "type": "object",
  "properties": {
    "event_id": { "type": "string", "format": "uuid" },
    "timestamp": { "type": "string", "format": "date-time" },
    "action_type": { "type": "string", "enum": ["pick_up", "put_down", "holding", "gesture"] },
    "hand_id": { "type": "string", "enum": ["left", "right"] },
    "target_object_id": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
  },
  "required": ["event_id", "timestamp", "action_type", "hand_id"]
}
