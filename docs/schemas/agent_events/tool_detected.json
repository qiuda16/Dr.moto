{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tool Detected Event",
  "description": "Event triggered when a tool is detected by the CV system.",
  "type": "object",
  "properties": {
    "event_id": { "type": "string", "format": "uuid" },
    "timestamp": { "type": "string", "format": "date-time" },
    "tool_id": { "type": "string" },
    "tool_name": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "location": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "zone_id": { "type": "string" }
      }
    }
  },
  "required": ["event_id", "timestamp", "tool_id", "location"]
}
