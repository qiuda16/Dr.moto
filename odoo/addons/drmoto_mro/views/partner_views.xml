<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner Extension -->
    <record id="view_partner_form_drmoto" model="ir.ui.view">
        <field name="name">res.partner.form.drmoto</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_vehicles" type="object" class="oe_stat_button" icon="fa-motorcycle">
                    <field name="vehicle_count" widget="statinfo" string="Vehicles"/>
                </button>
            </div>
            
            <notebook position="inside">
                <page string="My Garage" name="drmoto_vehicles">
                    <field name="vehicle_ids">
                        <list editable="bottom">
                            <field name="license_plate"/>
                            <field name="vehicle_id"/>
                            <field name="vin"/>
                            <field name="color"/>
                        </list>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
