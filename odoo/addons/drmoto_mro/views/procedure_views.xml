<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Procedure Tree -->
    <record id="view_drmoto_procedure_tree" model="ir.ui.view">
        <field name="name">drmoto.procedure.list</field>
        <field name="model">drmoto.procedure</field>
        <field name="arch" type="xml">
            <list string="Procedures">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="description"/>
                <field name="total_cost" widget="monetary"/>
            </list>
        </field>
    </record>

    <!-- Procedure Form -->
    <record id="view_drmoto_procedure_form" model="ir.ui.view">
        <field name="name">drmoto.procedure.form</field>
        <field name="model">drmoto.procedure</field>
        <field name="arch" type="xml">
            <form string="Procedure">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="vehicle_id"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="total_cost" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Steps">
                            <field name="step_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="instruction"/>
                                    <field name="tools"/>
                                    <field name="torque"/>
                                </list>
                            </field>
                        </page>
                        <page string="Required Parts &amp; Cost">
                            <field name="part_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="total_price" widget="monetary"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_drmoto_procedure" model="ir.actions.act_window">
        <field name="name">Repair Procedures</field>
        <field name="res_model">drmoto.procedure</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_drmoto_procedure"
              name="Repair Procedures"
              parent="menu_drmoto_root"
              action="action_drmoto_procedure"
              sequence="30"/>
</odoo>
